<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.rollspellkotlin.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gaming_board_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="3dp"
                android:src="@drawable/heart"/>
            <TextView
                android:id="@+id/health_text_view"

                android:background="@drawable/card_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="3dp"
                android:src="@drawable/sword"/>
            <TextView
                android:id="@+id/attack_text_view"

                android:background="@drawable/card_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="3dp"
                android:src="@drawable/shield"/>
            <TextView
                android:id="@+id/shield_text_view"

                android:background="@drawable/card_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="3dp"
                android:src="@drawable/coin"/>
            <TextView
                android:id="@+id/coins_text_view"

                android:background="@drawable/card_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/dice_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="3dp"
        android:src="@drawable/dice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>